<section>
  <div class="project-grid">
    {% for post in projectlist | reverse %}
      <div class="project-card" {% if post.url == url %} data-current="current item"{% endif %}>
        {% if post.data.image %}
          <a class="project-card__img" href="{{ post.url | url }}">
            <img src="/static/img/{{ post.data.image }}"/>
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>
